{
	"compilerOptions": {
		"paths": {
			"$components": [
				"../src/lib/components"
			],
			"$components/*": [
				"../src/lib/components/*"
			],
			"$webComponents": [
				"../src/lib/web-components"
			],
			"$webComponents/*": [
				"../src/lib/web-components/*"
			],
			"$stores": [
				"../src/lib/stores"
			],
			"$stores/*": [
				"../src/lib/stores/*"
			],
			"$helpers": [
				"../src/lib/helpers"
			],
			"$helpers/*": [
				"../src/lib/helpers/*"
			],
			"$assets": [
				"../src/lib/assets"
			],
			"$assets/*": [
				"../src/lib/assets/*"
			],
			"$schemas": [
				"../src/lib/schemas"
			],
			"$schemas/*": [
				"../src/lib/schemas/*"
			],
			"$constants": [
				"../src/lib/constants"
			],
			"$constants/*": [
				"../src/lib/constants/*"
			],
			"$testUtils": [
				"../testUtils"
			],
			"$testUtils/*": [
				"../testUtils/*"
			],
			"$lib": [
				"../src/lib"
			],
			"$lib/*": [
				"../src/lib/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker.ts",
		"../src/service-worker.d.ts"
	]
}